@{
    ViewData["Title"] = "Mapa con OpenStreetMap (Libre)";
}

<h2>Mapa con OpenStreetMap (Libre)</h2>

<!-- Estilos de Leaflet -->
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<!-- Contenedor del mapa -->
<div id="map" style="height:500px; width:100%; border-radius:12px;"></div>

<script>
    // Inicializamos el mapa centrado en Medellín
    var map = L.map('map').setView([6.2442, -75.5812], 13);

    // Agregamos las capas de OpenStreetMap
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OSM contributors</a>'
    }).addTo(map);
</script>
