@{
    ViewData["Title"] = "Mapa con Marcadores e Información";
}

<h2>Mapa con Marcadores e Información (Popups)</h2>

<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<div id="map" style="height:500px; width:100%; border-radius:12px;"></div>

<script>
    var map = L.map('map').setView([6.2442, -75.5812], 12);

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '© OpenStreetMap'
    }).addTo(map);

    var customIcon = L.icon({
        iconUrl: '/icons/marker.png',
        iconSize: [40, 40],
        iconAnchor: [20, 40],
        popupAnchor: [0, -40]
    });

    var puntos = [
        {
            lat: 6.2518, lng: -75.5636,
            titulo: "Centro de Medellín",
            descripcion: "Zona histórica y comercial."
        },
        {
            lat: 6.2676, lng: -75.5696,
            titulo: "Estadio Atanasio",
            descripcion: "Complejo deportivo principal de la ciudad."
        },
        {
            lat: 6.2308, lng: -75.5790,
            titulo: "Pueblito Paisa",
            descripcion: "Mirador y réplica de un pueblo antioqueño."
        }
    ];

    puntos.forEach(p => {
        L.marker([p.lat, p.lng], { icon: customIcon })
            .addTo(map)
            .bindPopup("<b>" + p.titulo + "</b><br/>" + p.descripcion);
    });
</script>
